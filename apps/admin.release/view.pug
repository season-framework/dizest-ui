.workspace-area(ng-cloak)
    div(style="display: none;")
        form#file-form
            input#file-uploader.form-control(type='file' name='file[]' accept=".png")
    
    .workspace-list
        .workspace-list-header
            .page-header.d-print-none
                .row.align-items-center
                    .col-auto
                        .text-blue.mr-1(style="font-size: 28px;")
                            i.fa-solid.fa-cogs
                    .col
                        h2.page-title= dic("title")
                        .text-muted
                            ul.list-inline.list-inline-dots.mb-0
                                li.list-inline-item= dic("desc")

        .workspace-list-item.area-round
            .container(style="max-width: 860px;")
                .card.mt-5.mb-5
                    .card-header
                        h4.card-title UI Releases

                    .card-table
                        table.table
                            tr(ng-repeat="item in history")
                                td.w-1.no-wrap.pl-3.pt-3.pb-3
                                    span.badge.bg-blue-lt(style="font-size: 16px;") {{item.name}}
                                td.text-muted.text-left.p-3
                                    ul.m-0
                                        li(ng-repeat="log in item.log") {{log}}
