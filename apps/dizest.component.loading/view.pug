.workspace-loading(ng-show="loading" ng-cloak)
    table
        tr
            td
                .spinner-border(ng-if="mode == 'spinner'")
                .text-center(style="width: 100%; padding: 12px;" ng-if="mode == 'progress'")
                    .progress(style="max-width: 480px; display: inline-block;")
                        .progress-bar(style="width: {{progress}}%" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" aria-label="{{percent}}% Complete")
                            span.visually-hidden {{progress}}% Complete

                .text-center.mt-2(ng-if="message")
                    h2.text-white {{message}}