.workspace-area(ng-cloak)
    .workspace-list
        .workspace-list-header
            .page-header.d-print-none
                .row.align-items-center
                    .col-auto
                        .text-blue.mr-1(style="font-size: 28px;")
                            i.fa-solid.fa-boxes-packing
                    .col
                        h2.page-title= dic("title")
                        .text-muted
                            ul.list-inline.list-inline-dots.mb-0
                                li.list-inline-item= dic("desc")
                
                    .col-auto.actions.area-round.if-desktop.m-0
                        select.form-select(ng-model="package.selected" ng-change="package.load()")
                            option(ng-repeat="kernelspec in package.kernelspec" value="{{kernelspec.name}}" ng-if="kernelspec.package_install") {{kernelspec.title}}

                    .col-auto.actions.area-round.if-desktop.p-0.m-0
                        input.form-control(style="width: 240px;" ng-model="package.text" ng-enter="package.install()" placeholder="Package name")
                    
                    .col-auto.actions.area-round.if-desktop.p-0.m-0
                        a.btn.btn-primary(ng-click="package.install()")
                            span Install

        .workspace-list-item
            .container.pt-4(style="max-width: 860px;")
                .row.packages
                    .col-md-4.text-left(ng-repeat="item in package.installed" ng-if="item.name.toLowerCase().includes(package.text.toLowerCase())")
                        b {{item.name}}
                        span {{"==" + item.version}}
            